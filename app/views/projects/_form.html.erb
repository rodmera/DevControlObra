<div class="container">
<div class="panel panel-default">
<div class="panel-heading">
</div>
<div class="panel-body">
<%= form_for @project do |f| %>

<div class="form-horizontal">
          <div class="form-group">
            <%= f.label :"Nombre", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :name, class:'form-control', placeholder:'Nombre del Proyecto', id: "project_name", :required => true %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :"Centro de Costo", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :ccosto, class:'form-control', placeholder:'Centro de Costo', :required => true %>
              </div>
          </div>          

          <div class="form-group">
            <%= f.label :"Descripción", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_area :descripcion, class:'form-control', placeholder:'Descripcion', :required => true %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :comuna, 'Comuna', class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.select(:comuna, options_for_select(Comuna.order('name ASC').all.collect { |comuna| [comuna.name, comuna.name] }, :selected => @project.comuna), {:include_blank => "- Seleccione Comuna -"}, {:id => "project_comuna", :required => true, class:'form-control input-sm'}) %>
              </div>
          </div>                    

          <div class="form-group">
            <%= f.label :"Mandante", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :mandante, class:'form-control', placeholder:'Mandante', :required => true %>
              </div>
          </div>  

          <div class="form-group">
            <%= f.label :"Plazo Ejecución (días)", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.number_field :plazoej, class:'form-control', placeholder:'Días Ejecución' %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :region, 'Region', class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.select(:region, options_for_select(Region.all.collect { |region| [region.name, region.name] }, :selected => @project.region), {:include_blank => "- Seleccione Región -"}, {:id => "project_region", :required => true, class:'form-control input-sm'}) %>
              </div>
          </div>

          <%= f.hidden_field :estado, :value => 'ABIERTO' %>

  <div class="actions">
    <%= f.submit "Guardar", {:class=>"btn btn-primary btn-sm"} %>
    <%= link_to 'Cancelar', :back, {:class=>"btn btn-primary btn-sm"}  %>
  </div>
<% end %>
</div>
</div>
</div>
</div>