<div class="container">
<h4>Productos</h4>
<table class="table table-stripped table-hover table-condensed table-bordered">
  <thead>
  <tr>
    <th>Centro de Costo</th>
    <th>Partida</th>
    <th>Unidad</th>
    <th>ID SOC</th>
    <th>Nombre</th>
    <th>Descripción</th>
    <th>Cantidad</th>
    <th>Valor Unitario</th>
    <th>Valor Total</th>
    <th colspan="3"> Acción </th>
  </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id_project %></td>
        <td><%= product.id_item %></td>
        <td><%= product.id_metric %></td>
        <td><%= product.id_order %></td>
        <td><%= product.nombre %></td>
        <td><%= product.descripcion %></td>
        <td><%= product.cant %></td>
        <td><%= number_to_currency(product.valor_unitario, :locale => 'en_us', :precision => 0, :delimiter => ".") %></td>
        <td><%= number_to_currency(product.valor_total, :locale => 'en_us', :precision => 0, :delimiter => ".")%></td>
        <td><%= link_to 'Ver', product, class: "btn btn-info btn-xs" %></td>
        <td>        
          <%= button_to edit_product_path(product), {remote: true, method: :get, class: "btn btn-info btn-xs"} do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar<% end %>
        </td>
        <td><%= link_to 'Borrar', product, class: "btn btn-info btn-xs", method: :delete, data: { confirm: 'Está Seguro?' } %></td>
      <% end %>
      </tr>
  </tbody>
</table>
<p>
  <%= link_to 'Nuevo Producto', new_product_path, remote: true, :class => 'btn btn-primary btn-sm' %>
  <%= link_to 'Ver Listado Productos', { controller: "products" }, :class => 'btn btn-primary btn-sm' %>
</p>
<!-- Codigo Importado, se debe revisar -->
</div>
<div id="product-form" style="display:none;"></div>
