<div class="container">
 
 <BR></BR>
  <div class="col-sm-5 col-sm-offset-2 col-md-7 col-md-offset-0">
   <div class="login-panel panel panel-default">
    <div class="panel-heading">
     <h3 class="panel-title">Iniciar sesión</h3>
    </div>
    <div class="panel-body">
     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset>
       <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
       </div>
       <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class: "form-control" %>
       </div>
       <% if devise_mapping.rememberable? -%>
        <div class="field">
         <%= f.check_box :remember_me %>
         <%= f.label :Recordar %>
        </div>
       <% end %>
 
       <%= f.submit "Ingresar", class: "btn btn-primary btn-primary btn-block" %>
       <%= render "devise/shared/links" %>
      </fieldset>
     <% end %>
    </div>
   </div>
  </div>
 </div>
</div>
