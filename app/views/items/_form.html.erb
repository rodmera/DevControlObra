<div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>

            <div class="panel-body">
                <%= form_for @item, html: {multipart: true} do |f| %>
                <div class="form-horizontal">
                    <div class="form-group">
                        <%= f.label :nombre, 'Nombre', class:'control-label col-xs-2 ' %>
                            <div class="col-xs-6">
                                <%= f.text_field :nombre, class:'form-control', placeholder:'Nombre de la Partida', :required => true %>
                            </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :cant, 'Cantidad', class:'control-label col-xs-2 ' %>
                            <div class="col-xs-6">
                                <%= f.number_field :cant, class:'form-control', placeholder:'Cantidad' %>
                            </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :descripcion, 'Sigla', class:'control-label col-xs-2 ' %>
                            <div class="col-xs-6">
                                <%= f.text_field :descripcion, class:'form-control', placeholder:'Sigla Partida' %>
                            </div>
                    </div>

                    <%= f.hidden_field :ccosto, :value => @project.ccosto %>
                    <%= f.hidden_field :project_id, :value => @project.id %>

                    <div class="form-group">
                        <%= f.label :valor_ppto, 'Presupuesto $', class:'control-label col-xs-2 ' %>
                            <div class="col-xs-6">
                                <%= f.number_field :valor_ppto, class:'form-control', placeholder:'Valor Presupuesto', :required => true %>
                            </div>
                    </div>
                      

                    <div class="form-group">
                        <div class="col-xs-2 left">
                        </div>
                    </div>
                    
                    <div class="form-actions">
    					<%= f.submit 'Guardar', {:class=>"btn btn-primary btn-sm"}  %>
                    	<%= link_to 'Cancelar', :back, {:class=>"btn btn-primary btn-sm"}  %>
  					</div>
                <% end %>
                </div>
            </div>
        </div>
    </div>