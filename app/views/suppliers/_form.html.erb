<div class="container">
<div class="panel panel-default">
<div class="panel-heading">
</div>
<div class="panel-body">
<%= form_for(supplier) do |f| %>
  <% if supplier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>
      <ul>
      <% supplier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-horizontal">
          <div class="form-group form-group-sm">
            <%= f.label :"Alias", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :alias, class:'form-control input-xs', placeholder:'Alias', :required => true %>
              </div>
          </div>  

          <div class="form-group form-group-sm">
            <%= f.label :"Razón Social", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :razon_social, class:'form-control input-xs', placeholder:'Razón Social', :required => true %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"RUT", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :rut, class:'form-control input-xs', id:'rut', placeholder:'XXXXXXXX-X', :maxlength=>"12", regexp: "[0-9]{0,10}(\-([0-9kK]{0,1})){0,1}", :required => true %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Giro", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :giro, class:'form-control input-xs', placeholder:'Giro', :required => true  %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Estado", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.select :estado, [['Activo'], ['Inactivo'], ['Otro']], {:include_blank => "- Seleccione Estado -"}, {:id => "supplier_estado", :required => true, class:'form-control input-sm'} %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Observaciones", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_area :observaciones, class:'form-control input-xs', placeholder:'Obs.', :required => true  %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Dirección", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :direccion_l1, class:'form-control input-xs', placeholder:'Dir.', :required => true  %>
              </div>
          </div>

          <div class="form-group">
            <%= f.label :comuna, 'Comuna', class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.select(:comuna, options_for_select(Comuna.order('name ASC').all.collect { |comuna| [comuna.name, comuna.name] }, :selected => @supplier.comuna), {:include_blank => "- Seleccione Comuna -"}, {:id => "supplier_comuna", :required => true, class:'form-control input-sm'}) %>
              </div>
          </div>         

          <div class="form-group">
            <%= f.label :region, 'Region', class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.select(:region, options_for_select(Region.all.collect { |region| [region.name, region.name] }, :selected => @supplier.region), {:include_blank => "- Seleccione Región -"}, {:id => "supplier_region", :required => true, class:'form-control input-sm'}) %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"País", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.select :pais, [['Chile'], ['Argentina'], ['Perú'], ['Brasil'], ['USA']] , {:id => "supplier_pais", :required => true, class:'form-control input-sm'} %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Fono", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :telefono, class:'form-control input-xs', placeholder:'Fono', :required => true  %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Página Web", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :sitio_web, class:'form-control ', placeholder:'Web' %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Da Crédito", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.select :credito, [['SI'], ['NO']] , {:include_blank => "- Seleccione Op.Credito -"}, {:id => "supplier_opcredito", :required => true, class:'form-control input-sm'} %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Plazo Pago", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.select :plazo_pago, [['30 Días'], ['60 Días'], ['90 Días']] , {:include_blank => "- Seleccione Plazo Pago -"}, {:id => "supplier_plazopago", :required => false, class:'form-control input-sm'} %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Nombre Contacto", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :p_nombrecontacto, class:'form-control ', placeholder:'Nombre Contacto', :required => true %>
              </div>
          </div>

          <div class="form-group form-group-sm">
            <%= f.label :"Fono Contacto", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :p_fonocontacto, class:'form-control ', placeholder:'Fono Contacto', :required => true %>
              </div>
          </div>    

          <div class="form-group form-group-sm">
            <%= f.label :"Mail Contacto", class:'control-label col-xs-2 ' %>
              <div class="col-xs-5">
                <%= f.text_field :p_mailcontacto, class:'form-control ', placeholder:'Mail Contacto', :required => true %>
              </div>
          </div>                              

  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-primary btn-sm"%>
    <%= link_to 'Cancelar', :back, {:class=>"btn btn-primary btn-sm"}  %>
  </div>
<% end %>
</div>
</div>
</div>
</div>