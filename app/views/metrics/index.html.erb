
<h5>Metrics</h5>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Unit</th>
      <th>Date</th>
      <th>State</th>
      <th>User</th>
      <th>Product type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.number %></td>
        <td><%= metric.name %></td>
        <td><%= metric.unit %></td>
        <td><%= metric.date %></td>
        <td><%= metric.state %></td>
        <td><%= metric.user_id %></td>
        <td><%= metric.product_type %></td>
        <td><%= link_to 'Show', metric %></td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Metric', new_metric_path %>
